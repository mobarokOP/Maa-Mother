<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.ScaleActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryAccentPro"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scale"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:background="#E68AFF"
        android:gravity="center"
        android:id="@+id/bar"/>

    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@id/bar"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="wrap_content"
        android:text="W"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:background="#E68AFF"
        android:gravity="center"
        android:id="@+id/w"/>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_toRightOf="@id/w"
        android:layout_below="@id/bar"
        android:layout_marginVertical="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_15sdp"
        android:id="@+id/numberRecycler"
        />


    <TextView
        android:layout_below="@id/w"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="wrap_content"
        android:text="T"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:background="#E68AFF"
        android:gravity="center"
        android:id="@+id/t"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_toRightOf="@id/t"
        android:layout_below="@id/numberRecycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:id="@+id/scale"
        />



    <TextView
        android:layout_below="@id/t"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="wrap_content"
        android:text="P"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:background="#E68AFF"
        android:gravity="center"
        android:id="@+id/p"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_toRightOf="@id/p"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:layout_below="@id/scale"
        android:id="@+id/scaleRecycler"
        />

    <TextView
        android:layout_below="@id/p"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="wrap_content"
        android:text="M"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:background="#E68AFF"
        android:gravity="center"
        android:id="@+id/m"/>

    <LinearLayout
        android:id="@+id/month"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_toRightOf="@id/m"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_12sdp"
        android:orientation="horizontal"
        android:layout_below="@id/scaleRecycler"
        android:layout_marginTop="@dimen/_8sdp"
        android:weightSum="21"
        >
        <TextView
            android:layout_marginStart="0.4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="2"/>


        <TextView
            android:layout_marginStart="0.4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="2"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="2"/>


        <TextView
            android:layout_marginStart="0.4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="3"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="2"/>


        <TextView
            android:layout_marginStart="0.4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="4"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="2"/>

        <TextView
            android:layout_marginStart="0.4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="5"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="2"/>


        <TextView
            android:layout_marginStart="0.4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="6"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="2"/>


        <TextView
            android:layout_marginStart="0.4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="7"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="2"/>


        <TextView
            android:layout_marginStart="0.4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="8"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="2"/>


        <TextView
            android:layout_marginStart="0.4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="9"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="2"/>


        <TextView
            android:layout_marginStart="0.4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="10"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="2"/>

        <TextView
