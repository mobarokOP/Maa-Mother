            android:textSize="@dimen/_10sdp"
            android:layout_weight="0.8"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#3353C558"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="0.8"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#6653C558"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="0.8"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#9953C558"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="0.8"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#CC53C558"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="0.8"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#53C558"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="8"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_centerInParent="true"
        android:layout_below="@id/bscale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="50% বাঁচার সম্ভাবনা"
        android:gravity="center"
        android:fontFamily="@font/solaimanlipi"
        android:textSize="@dimen/_10sdp"/>

    <View
        android:layout_marginTop="@dimen/_4sdp"
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="#E68AFF"
        android:layout_below="@id/s"
        android:layout_marginHorizontal="@dimen/_40sdp"
        />

    <TextView
        android:layout_alignLeft="@id/lin1"
        android:layout_below="@id/lin1"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="wrap_content"
        android:text="W"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:background="#E68AFF"
        android:gravity="center"
        android:id="@+id/wHint"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin1"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
